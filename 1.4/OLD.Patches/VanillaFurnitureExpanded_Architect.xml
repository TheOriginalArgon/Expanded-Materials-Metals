<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded - Architect</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>

                <!-- Replace steel cost with concrete -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/TerrainDef [defName = "VFEArch_ConcreteFoundation"]/costList/Steel</xpath>
                    <value>
                        <VMEu_Concrete>5</VMEu_Concrete>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>