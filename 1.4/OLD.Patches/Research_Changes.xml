<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Components Need Germanium and Copper -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ResearchProjectDef [defName = "Prosthetics"]/prerequisites</xpath>
		<value>
			<prerequisites>
			  <li>Machining</li>
			  <li>VMEu_StainlessSteelAlloying</li>
			</prerequisites>
		</value>
	</Operation>

	<!-- Change steel recipe label and description -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/RecipeDef [defName = "ExtractMetalFromSlag"]/label</xpath>
		<value>
			<label>smelt steel from slag</label>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/RecipeDef [defName = "ExtractMetalFromSlag"]/description</xpath>
		<value>
			<description>Use heat and strong electromagnets to extract useful steel from slag chunks.</description>
		</value>
	</Operation>
	
</Patch>