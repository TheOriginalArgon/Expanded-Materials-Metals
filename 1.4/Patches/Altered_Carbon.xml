<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Altered Carbon</li>
    </mods>
    <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>

            <!-- Sleeve Incubator -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef [defName = "VFEU_SleeveIncubator"]/costList</xpath>
                <value>
                    <costList>
                        <Steel>150</Steel>
                        <Plasteel>50</Plasteel>
                        <VMEu_Titanium>50</VMEu_Titanium>
                        <VMEu_StainlessSteel>80</VMEu_StainlessSteel>
                        <ComponentSpacer>3</ComponentSpacer>
                    </costList>
                </value>
            </li>

            <!-- Sleeve Casket -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef [defName = "VFEU_SleeveCasket"]/costList</xpath>
                <value>
                    <costList>
                        <Steel>75</Steel>
                        <Plasteel>25</Plasteel>
                        <VMEu_StainlessSteel>25</VMEu_StainlessSteel>
                        <ComponentSpacer>2</ComponentSpacer>
                    </costList>
                </value>
            </li>

            <!-- Cortical Stack Storage -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef [defName = "VFEU_CorticalStackStorage"]/costList/Steel</xpath>
                <value>
                    <costList>
                        <Steel>150</Steel>
                        <Plasteel>100</Plasteel>
                        <VMEu_StainlessSteel>100</VMEu_StainlessSteel>
                        <VMEu_Titanium>50</VMEu_Titanium>
                        <ComponentSpacer>12</ComponentSpacer>
                    </costList>
                </value>
            </li>

            <!-- Decryption Bench -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef [defName = "VFEU_DecryptionBench"]/costList/Steel</xpath>
                <value>
                    <costList>
                        <Steel>75</Steel>
                        <Plasteel>50</Plasteel>
                        <VMEu_StainlessSteel>25</VMEu_StainlessSteel>
                        <ComponentSpacer>5</ComponentSpacer>
                    </costList>
                </value>
            </li>

        </operations>
    </match>
</Operation>

</Patch>
