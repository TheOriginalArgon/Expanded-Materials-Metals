<Defs>

  <!-- Coal -->
  <ThingDef ParentName="RockBase">
    <defName>EM_MineableCoal</defName>
    <label>coal ore</label>
    <description>Rock containing bits of coal.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <colorTwo>(25,29,34)</colorTwo>
      <color>(66,69,74)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>900</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>EM_Coal</mineableThing>
      <mineableYield>50</mineableYield>
      <mineableScatterCommonality>1</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>20~30</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

