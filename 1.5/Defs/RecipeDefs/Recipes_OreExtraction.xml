<Defs>

    <!-- DEBUG -->
    <RecipeDef ParentName="MakeStoneBlocksBase">
        <defName>EM_ExtractOreFromChunks</defName>
        <label>extract ore from stone chunks</label>
        <description>Smelt rocks to get small traces of resources.</description>
        <recipeUsers>
            <li>ElectricSmelter</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>StoneChunks</li>
                    </categories>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>StoneChunks</li>
            </categories>
        </fixedIngredientFilter>
        <modExtensions>
            <li Class="ArgonicCore.ModExtensions.RecipeDefExtension_SpecialProducts">
                <productTypeDef>EM_SpecialProducts_OreExtraction</productTypeDef>
            </li>
        </modExtensions>
        <researchPrerequisite>EM_OreExtraction</researchPrerequisite>
    </RecipeDef>

    <RecipeDef>
        <defName>EM_ExtractIronFromSlag</defName>
        <label>smelt iron from slag</label>
        <description>Use heat and strong electromagnets to extract useful iron from slag chunks.</description>
        <recipeUsers>
            <li>ElectricSmelter</li>
        </recipeUsers>
        <jobString>Smelting iron from slag.</jobString>
        <workAmount>400</workAmount>
        <workSpeedStat>SmeltingSpeed</workSpeedStat>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>EM_ChunkSlagIron</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <products>
            <EM_Iron>15</EM_Iron>
        </products>
        <fixedIngredientFilter>
            <thingDefs>
                <li>EM_ChunkSlagIron</li>
            </thingDefs>
        </fixedIngredientFilter>
    </RecipeDef>

