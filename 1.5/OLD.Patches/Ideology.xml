<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Ideology</li>
    </mods>
    <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>

            <!-- Styling Table -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef [defName = "StylingStation"]/costList/Steel</xpath>
                <value>
                    <VMEu_Iron>30</VMEu_Iron>
                </value>
            </li>

            <!-- Sleep Accelerator -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef [defName = "SleepAccelerator"]/costList/Steel</xpath>
                <value>
                    <Steel>30</Steel>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef [defName = "SleepAccelerator"]/costList</xpath>
                <value>
                    <VMEu_StainlessSteel>20</VMEu_StainlessSteel>
                </value>
            </li>

            <!-- Biosculpret Pod -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef [defName = "BiosculpterPod"]/costList/Steel</xpath>
                <value>
                    <Steel>80</Steel>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef [defName = "BiosculpterPod"]/costList</xpath>
                <value>
                    <VMEu_StainlessSteel>40</VMEu_StainlessSteel>
                </value>
            </li>

            <!-- Neural Supercharger -->
            <li Class="PatchOperationReplace">
                <xpath>/Defs/ThingDef [defName = "NeuralSupercharger"]/costList/Steel</xpath>
                <value>
                    <Steel>30</Steel>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef [defName = "NeuralSupercharger"]/costList</xpath>
                <value>
                    <VMEu_StainlessSteel>20</VMEu_StainlessSteel>
                </value>
            </li>

        </operations>
    </match>
</Operation>

</Patch>